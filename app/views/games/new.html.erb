<div class="container">
  <h1>New Game</h1>
  <div class="letter-board">
    <ul class="list-inline">
      <% @grid.each do |letter| %>
      <li class="letter-card">
        <div class="letter">
          <%= letter %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
    <p>What's the longest word you can find?</p>
    <form action="score" method="post" class="form-group form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @grid %>
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play" class="btn btn-primary">
    </form>
  </div>




